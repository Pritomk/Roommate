                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="#AE68B5B5" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:fontFamily="@font/ubuntu"
                        android:text="To"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_search_box_to"
                        android:layout_width="150dp"
                        android:layout_height="46dp"
                        android:layout_weight="65"
                        android:background="@drawable/searchbox_bg"
                        android:fontFamily="@font/ubuntu"
                        android:hint="Drop out location or address"
                        android:padding="4dp"
                        android:textFontWeight="10"
                        android:textSize="16sp"
                        tools:text="Search Text"
                        android:focusable="false"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/ll1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:fontFamily="@font/ubuntu"
                        android:text="From"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_search_box_from"
                        android:layout_width="150dp"
                        android:layout_height="46dp"
                        android:layout_weight="65"
                        android:background="@drawable/searchbox_bg"
                        android:fontFamily="@font/ubuntu"
                        android:hint="Pick up location or address"
                        android:padding="4dp"
                        android:textSize="16sp"
                        tools:text="Search Text"
                        android:focusable="false"/>
                </LinearLayout>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/tv_date_text"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="@color/brown"
                    android:fontFamily="@font/ubuntu"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="14/06/2022" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="0dp"
                    android:layout_weight="20" />

                <TextView
                    android:id="@+id/tv_time_text"
                    android:layout_width="108dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="@color/brown"
                    android:fontFamily="@font/ubuntu"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="2:30 pm" />
            </LinearLayout>

