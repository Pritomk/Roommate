<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/list_item_bg"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/list_item_background">

        <ImageView
            android:id="@+id/iv_tripsPic"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/hotel1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tripsItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/violet"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_tripsPic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hostel Name" />

        <TextView
            android:id="@+id/tv_tripsItemLLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/left_tv_bg"
            android:fontFamily="@font/ubuntu"
            android:padding="4dp"
            android:textAlignment="textEnd"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_tripsItemServices"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tripsItemServices"
            tools:text="13 Days Left" />


        <TextView
            android:id="@+id/tv_tripsItemLLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_tripsItemTitle"
            app:layout_constraintTop_toBottomOf="@id/tv_tripsItemTitle"
            tools:text="Dehradun, Uttarakhand" />


        <TextView
            android:id="@+id/tv_tripsItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_tripsItemLLocation"
            app:layout_constraintTop_toBottomOf="@id/tv_tripsItemLLocation"
            tools:text="Checked In Date:- 15 May 2022" />


        <TextView
            android:id="@+id/tv_tripsItemServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_tripsItemDate"
            app:layout_constraintTop_toBottomOf="@id/tv_tripsItemDate"
            tools:text="Services :- AC , including breakfast" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>